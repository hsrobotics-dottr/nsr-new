{
  "rules": [
    {
      "description": "Fix any errors, keep UI intact",
      "include": ["**/*.tsx", "**/*.ts", "**/*.js"],
      "exclude": ["**/*.css", "**/*.scss"],
      "actions": {
        "allow": [
          "fix-syntax-errors",
          "fix-import-paths",
          "add-missing-imports",
          "remove-unused-imports",
          "fix-unclosed-tags",
          "fix-unbalanced-braces"
        ],
        "deny": [
          "change-css-classes",
          "rewrite-entire-file",
          "rename-components",
          "alter-component-hierarchy",
          "modify-text-content"
        ]
      }
    }
  ]
}
